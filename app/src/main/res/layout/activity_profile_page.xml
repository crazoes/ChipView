<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilePage">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorRegisterBackground"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="53dp"
        tools:ignore="MissingConstraints">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="0dp"
                android:background="@drawable/ic_account_circle_black_24dp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="41dp" />


        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="128dp"
            android:text="Shreeya Patel"
            android:textColor="#999999"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/location"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="175dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/ic_add_location_black_24dp" />

        <TextView
            android:id="@+id/t0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="37dp"
            android:text="Location"
            android:textColor="#999999"
            android:textStyle="italic" />

        <ImageView
            android:id="@+id/link"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="178dp"
            android:layout_marginTop="68dp"
            android:background="@drawable/ic_add_circle_black_24dp" />

        <TextView
            android:id="@+id/t1"
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="69dp"
            android:text="Resume Link"
            android:textColor="#999999"
            android:textStyle="italic" />


        <ImageView
            android:id="@+id/link2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="178dp"
            android:layout_marginTop="97dp"
            android:background="@drawable/ic_add_circle_black_24dp" />


        <TextView
            android:id="@+id/t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="98dp"
            android:text="Other link "
            android:layout_marginLeft="210dp"
            android:textColor="#999999"
            android:textStyle="italic" />

        <ImageView
            android:id="@+id/ideas"
            android:layout_width="175dp"
            android:layout_height="38dp"
            android:layout_marginTop="190dp"
            android:background="@drawable/rectangle" />

        <ImageView
            android:id="@+id/partOf"
            android:layout_width="200dp"
            android:layout_height="38dp"
            android:layout_marginLeft="175dp"
            android:layout_marginTop="190dp"
            android:background="@drawable/rectangle2" />

        <TextView
            android:id="@+id/t3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="197dp"
            android:text="My Ideas"
            android:gravity="center"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/t4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="197dp"
            android:text="Part of"
            android:textColor="#FFFFFF" />

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="fill_parent"
            android:layout_marginTop="228dp">

            <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/scroll"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:id="@+id/layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </ScrollView>
        </LinearLayout>


    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
